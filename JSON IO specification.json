{
    "device-name": "Harvestic App",
    "device-type": "Harvestic",
    "buffers-count": 1,
    "input-buffers":{
        "1":{
            "token-delimitators": "",
            "protocol": "HTTP",
            "prefix": "curl -XPOST 'http://127.0.0.1:9080/'",                                   // localhost:9080/settings/defrost/true
            "buffer-tokens":[
            {
                "name":"Harvestic options",
                "description":"",
                "token-type":"string", 
                "byte-size":10, 
                "regex-rule": "[a-zA-Z]*", // Correct inputs will be: [settings]
                "optional": false
            },
            {
                "name":"Harvestic option parameter key",
                "description": "Parameter key for the setting chosen",
                "token-type":"string",
                "byte-size":10,
                "regex-rule": "[a-zA-Z]*", // Correct inputs will be: [defrost]
                "optional": false
            },
            {
                "name":"Harvestic option parameter value",
                "description": "Parameter value for the setting chosen",
                "token-type":"string",
                "byte-size":10,
                "regex-rule": "[a-zA-Z]*", // Correct inputs will be: [true, false]
                "optional": false
            }
            ]
        },
        "2":{
            "token-delimitators": "",
            "protocol": "HTTP",
            "prefix": "curl -XPUT 'http://127.0.0.1:9080/map/'", // localhost:9080/map/:index/:value
            "buffer-tokens":[
            {
                "name":"Hose index number",
                "description":"Index of the hose element in the on/off states vector.",
                "token-type":"number", 
                "byte-size":4, 
                "regex-rule": "[0-9]+", // Correct inputs will be numbers between 0 and [length of hose vector]
                "optional": false
            },
            {
                "name":"Turned on/off state",
                "description": "Sets the state of the hose.",
                "token-type":"string",
                "byte-size":5,
                "regex-rule": "^(true|false)$",
                "optional": false
            }
            ]
        }
    },
    "output-buffers":{
        "1":{
            "token-delimitators": "",
            "protocol": "HTTP",
            "prefix": "curl -XGET 'http://127.0.0.1:9080/'",
            "buffer-tokens":[
            {
                "name":"Harvestic options",
                "description":"",
                "token-type":"string", 
                "byte-size":10, 
                "regex-rule": "[a-zA-Z]*", // Correct inputs will be: [ready, auth, settings]
                "optional": false
            },
            {
                "name":"Harvestic options parameter",
                "description": "Parameters for the setting chosen",
                "token-type":"string",
                "byte-size":10,
                "regex-rule": "[a-zA-Z]*", // Correct inputs will be: [defrost]
                "optional": true
            }
            ]
        },
        "2":{
            "token-delimitators": "",
            "protocol": "HTTP",
            "prefix": "curl -XGET 'http://127.0.0.1:9080/map/'",
            "buffer-tokens":[
            {
                "name":"Hose index number",
                "description":"",
                "token-type":"number", 
                "byte-size":4, 
                "regex-rule": "[0-9]+", // Correct inputs will be numbers between 0 and [length of hose vector]
                "optional": false
            }
            ]
        }
    }
}



